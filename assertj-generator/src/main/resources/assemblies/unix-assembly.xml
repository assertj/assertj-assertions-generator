<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>unix</id>
  <!-- Generates a zip package containing the needed files -->
  <formats>
    <format>zip</format>
  </formats>

  <!-- Adds dependencies to assembly under lib directory -->
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>true</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <!-- Adds startup scripts located in src/main/scripts to the root directory of zip package -->
    <fileSet>
      <directory>${project.basedir}/src/main/resources/scripts</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>0777</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/templates</directory>
      <outputDirectory>templates</outputDirectory>
      <includes>
        <include>*template*.txt</include>
      </includes>
      <fileMode>0666</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
</assembly>

